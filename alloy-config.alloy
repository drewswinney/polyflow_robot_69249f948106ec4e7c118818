logging { level = "info" }

loki.source.journal "system" {
  forward_to = [loki.process.robot.receiver]
}

loki.process "robot" {
  stage.static_labels {
    values = {
      robot_id = "69249f948106ec4e7c118818",
      host     = "69249f948106ec4e7c118818.local",
    }
  }

  forward_to = [loki.write.local.receiver]
}

loki.write "local" {
  endpoint {
    url = "http://127.0.0.1:3100/loki/api/v1/push"
  }
}